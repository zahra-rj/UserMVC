<!DOCTYPE html>
<html lang="fa">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] | User.MVC</title>

    <!-- اگر Bootstrap داری -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            margin: 0;
            font-family: "IRANSans", sans-serif;
        }
        /* نوار منوی بالای صفحه */
        header {
            background-color: #242424;  /* رنگ تیره دلخواه */
            color: white;
            height: 48px;
            line-height: 48px;
            padding: 0 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        header a {
            color: white;
            text-decoration: none;
            margin-left: 15px;
        }
        main {
            padding: 20px;
        }
    </style>
</head>

<body>
    <header>
        <div class="logo">
            <span style="font-weight:bold;">Wallet.MVC</span>
        </div>
        <nav>
            <a href="/Home/Index">خانه</a>
            <a href="/User/List">کاربران</a>
            <a href="/About">درباره</a>
        </nav>
    </header>

    <main role="main" class="container">
        @RenderBody()
    </main>

    @RenderSection("Scripts", required: false)
</body>
</html>

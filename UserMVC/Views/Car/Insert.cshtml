
@model UserMVC.Models.Car

@using UserMVC.Models;

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    ViewData["Title"] = "درج خودروی جدید";
    var users = ViewBag.Users as List<UserMVC.Models.User>;
}

<h2 class="text-center mt-4">New Car</h2>

<form asp-action="Insert" asp-controller="Car" method="post" class="mt-3">
    <div class="mb-3">
        <label asp-for="Brand" class="form-label">برند</label>
        <input asp-for="Brand" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Model" class="form-label">مدل</label>
        <input asp-for="Model" type="number" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Color" class="form-label">رنگ</label>
        <input asp-for="Color"  class="form-control" />
    </div>
    <label>کاربر مرتبط</label>
    <select asp-for="UserId" class="form-control">
        <option value="">انتخاب کاربر</option>
        @foreach (var users in ViewBag.Users as List<UserMVC.Models.User>)
        {
            <option value="@users.Id">@users.Name </option>
        }
    </select>

    <button type="submit" class="btn btn-dark">ثبت خودرو</button>
</form>








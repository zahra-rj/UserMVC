@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "به روز رسانی کاربر جدید";
}
@model Car
<h2 class="text-center mt-4">new user</h2>

<form asp-action="Update" asp-controller="User" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="Brand" class="form-label">برند</label>
        <input asp-for="Brand" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Model" class="form-label">مدل</label>
        <input asp-for="Model" type="number" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Color" class="form-label">رنگ</label>
        <input asp-for="Color" type="number" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="ImgPath" class="form-label">رنگ</label>
        <input asp-for="ImgPath" class="form-control" />
    </div>
    <button type="submit" class="btn btn-dark">ثبت کاربر</button>
</form>

@using UserMVC.ViewModels
@model List<VmCar>

<h2>لیست ماشین ها</h2>



@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>لیست کاربران</h2>
<table class="table table-dark table_striped mt-4">
    <thead>
    <tr>
        <th>شناسه</th>
        <th>برند</th>
        <th>مدل</th>
        <th>رنگ</th>
            <th>مالک</th>
            <th>تصویر</th>
        <th></th>       
    </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
              <td>@u.Id</td> 
                <td>@u.Brand</td>
                <td>@u.Model</td>
                <td>@u.Color</td>
                <td>@u.UserName</td>
                <td><img style="width:50px;" src="@u.ImgPath" /> </td>
                <td><a href="/User/Delete/@u.Id">حذف</a><a href="/User/Update/@u.Id">ویرایش</a></td>
            </tr>
        }
    </tbody>
</table>


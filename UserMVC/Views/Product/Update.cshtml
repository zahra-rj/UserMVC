@model UserMVC.Models.Product

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    ViewData["Title"] = "ویرایش محصول";
}

<h2 class="text-center mt-4">Edit Product</h2>

<form asp-action="Update" asp-controller="Product" method="post" enctype="multipart/form-data" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ImgPath" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label">نام محصول</label>
        <input asp-for="Name" class="form-control" />
        
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">توضیحات</label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        
    </div>

    <div class="mb-3">
        <label asp-for="price" class="form-label">قیمت (تومان)</label>
        <input asp-for="price" type="number" class="form-control" />
        
    </div>

    <div class="mb-3">
        <label asp-for="quantity" class="form-label">تعداد موجودی</label>
        <input asp-for="quantity" type="number" class="form-control" />
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="File" class="form-label">تصویر جدید (اختیاری)</label>
            <input asp-for="File" type="file" accept="image/*" class="form-control" />
            
        </div>

        
    </div>

    <button type="submit" class="btn btn-primary">ذخیره تغییرات</button>
   
</form>


